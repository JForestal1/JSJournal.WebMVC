@model IEnumerable<JSJournal.Models.LeadStatusListItem>

@{
    ViewBag.Title = "LeadStatusIndex";
}

<h2>List of Lead Status Codes</h2>

<p>
    @Html.ActionLink("Create New", "LeadStatusCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StatusTypeID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.StatusTypeID)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.StatusTypeID }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.StatusTypeID })
    </td>
</tr>
}

</table>
